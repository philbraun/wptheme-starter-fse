{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"customTemplates": [
		{
			"name": "blank",
			"title": "Blank",
			"postTypes": [
				"page",
				"post"
			]
		},
		{
			"name": "page-fullwidth-notitle",
			"title": "Page: Fullwidth / No title",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "page-fullwidth",
			"title": "Page: Fullwidth",
			"postTypes": [
				"page"
			]
		},
		{
			"name": "page-notitle",
			"title": "Page: No title",
			"postTypes": [
				"page"
			]
		}
	],
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "query",
			"title": "Query (The Loop)",
			"area": "query"
		}
	],
	"settings": {
		"color": {
			"defaultPalette": false,
			"custom": false,
			"duotone": [],
			"customDuotone": false,
			"defaultGradients": false,
			"customGradients": false,
			"gradients": [
				{
					"slug": "green-to-yellow",
					"gradient": "linear-gradient(160deg, var(--wp--preset--color--green), var(--wp--preset--color--yellow))",
					"name": "Green to Yellow"
				},
				{
					"slug": "yellow-to-green",
					"gradient": "linear-gradient(160deg, var(--wp--preset--color--yellow), var(--wp--preset--color--green))",
					"name": "Yellow to Green"
				},
				{
					"slug": "red-to-yellow",
					"gradient": "linear-gradient(160deg, var(--wp--preset--color--red), var(--wp--preset--color--yellow))",
					"name": "Red to Yellow"
				},
				{
					"slug": "yellow-to-red",
					"gradient": "linear-gradient(160deg, var(--wp--preset--color--yellow), var(--wp--preset--color--red))",
					"name": "Yellow to Red"
				}
			],
			"link": true,
			"palette": [
				{
					"slug": "black",
					"color": "#000000"
				},
				{
					"slug": "dark-gray",
					"color": "#212529"
				},
				{
					"slug": "gray",
					"color": "#ABB8C3"
				},
				{
					"slug": "charcoal",
					"color": "#264653"
				},
				{
					"slug": "green",
					"color": "#2A9D8F"
				},
				{
					"slug": "yellow",
					"color": "#E9C46A"
				},
				{
					"slug": "orange",
					"color": "#F4A261"
				},
				{
					"slug": "red",
					"color": "#E76F51"
				},
				{
					"slug": "white",
					"color": "#FFFFFF"
				}
			]
		},
		"custom": {
			"typography": {
				"line-height": {
					"body": 1.7,
					"heading": 1.3,
					"page-title": 1.1
				},
				"font-weight":{
					"light": "300",
					"normal": "400",
					"bold": "700"
				}
			},
			"spacing": {
				"unit": "20px",
				"horizontal": "25px",
				"vertical": "30px"
			}
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"lineHeight": true,
			"fontFamilies": [
				{
					"fontFamily": "system-ui, -apple-system, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, \"Noto Sans\", \"Liberation Sans\", sans-serif",
					"name": "Sans Serif",
					"slug": "sans-serif"
				},
				{
					"fontFamily": "Cambria, Georgia, \"Times New Roman\", Times, serif",
					"name": "Serif",
					"slug": "serif"
				},
				{
					"fontFamily": "SFMono-Regular, Menlo, Monaco, Consolas, \"Liberation Mono\", \"Courier New\", monospace",
					"name": "Monospace",
					"slug": "monospace"
				}
			],
			"fontSizes": [
				{
					"name": "Tiny",
					"size": "0.64rem",
					"slug": "tiny"
				},
				{
					"name": "Small",
					"size": "1.05rem",
					"slug": "small"
				},
				{
					"name": "Normal",
					"size": "clamp(1.05rem, 2vw, 1.275rem)",
					"slug": "normal"
				},
				{
					"name": "Large",
					"size": "clamp(1.45rem, 2vw, 2rem)",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "clamp(1.75rem, 3vw, 2.25rem)",
					"slug": "extra-large"
				},
				{
					"name": "Huge",
					"size": "clamp(2.25rem, 4vw, 2.75rem)",
					"slug": "huge"
				},
				{
					"name": "Gigantic",
					"size": "clamp(2.75rem, 6vw, 3.25rem)",
					"slug": "gigantic"
				}
			]
		},
		"layout": {
			"contentSize": "650px",
			"wideSize": "1000px"
		}
	},
	"styles": {
		"blocks": {
			"core/site-tagline": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": 1.4
				}
			},
			"core/button": {
				"border": {
					"border": "1px",
					"radius": "0px"
				},
				"color": {
					"background": "var(--wp--preset--color--dark-gray)",
					"text": "var(--wp--preset--color--white)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)"
				}
			},
			"core/post-author": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--body)"
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--body)"
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--body)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)",
					"textTransform": "uppercase"
				}
			},
			"core/code": {
				"spacing": {
					"padding": {
						"top": "var(--wp--custom--spacing--unit)",
						"bottom": "var(--wp--custom--spacing--unit)",
						"left": "var(--wp--custom--spacing--unit)",
						"right": "var(--wp--custom--spacing--unit)"
					}
				},
				"border": {
					"width": "1.5px",
					"radius": "0px",
					"color": "var(--wp--preset--color--dark-gray)",
					"style": "solid"
				}
			}
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--dark-gray)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--dark-gray)"
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--serif)",
					"fontSize": "var(--wp--custom--typography--font-size--gigantic)",
					"lineHeight": "var(--wp--custom--typography--line-height--page-title)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--serif)",
					"fontSize": "var(--wp--custom--typography--font-size--gigantic)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--serif)",
					"fontSize": "var(--wp--custom--typography--font-size--huge)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)",
					"fontWeight": "var(--wp--custom--typography--font-weight--normal)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--typography--line-height--heading)"
				}
			}
		},
		"spacing": {
			"blockGap": "1.5rem"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--sans-serif)",
			"fontSize": "var(--wp--preset--font-size--normal)",
			"lineHeight": "var(--wp--custom--typography--line-height--body)"
		}
	}
}
